<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             x:Class="Project.DaySelect"
             Title="Select Day">
  <StackLayout>
    
    <Button x:Name="btnMonday" Text="Monday" Clicked="BtnMonday_OnClicked"></Button>
    <Button x:Name="btnTuesday" Text="Tuesday" Clicked="BtnTuesday_OnClicked"></Button>
    <Button x:Name="btnWednesday" Text="Wednesday" Clicked="BtnWednesday_OnClicked"></Button>
    <Button x:Name="btnThursday" Text="Thursday" Clicked="BtnThursday_OnClicked"></Button>
    <Button x:Name="btnFriday" Text="Friday" Clicked="BtnFriday_OnClicked"></Button>
    <Button x:Name="btnSaturday" Text="Saturday" Clicked="BtnSaturday_OnClicked"></Button>
    <Button x:Name="btnSunday" Text="Sunday" Clicked="BtnSunday_OnClicked"></Button>
  </StackLayout>
</ContentPage>