<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.HomePage"
             Title="Home Page">
  <Label Text="Hello To My New App"></Label>
  
  <MasterDetailPage.Master>
  
    <ContentPage Padding="10" BackgroundColor="Gray" Title="Master">
    
      <ContentPage.Content>
        
        <StackLayout Margin="5, 30, 5, 5">
        
          <Label Text="Menu"></Label>
          
          <Button Text="Home" BackgroundColor="Yellow" Clicked="Home_OnClicked"></Button>
          
          <Button Text="Food Diary" BackgroundColor="Yellow" Clicked="FoodDiary_OnClicked"></Button>
          
          <Button Text="Shopping List" BackgroundColor="Yellow" Clicked="ShoppingList_OnClicked"></Button>
      
        </StackLayout>  
      
      </ContentPage.Content>
    
    </ContentPage>
  
  </MasterDetailPage.Master>
  
  <MasterDetailPage.Detail>
  
    <ContentPage Padding="10">
    
      <ContentPage.Content>
        
        <StackLayout Margin="5, 30, 5, 5">
        
          <Label Text="Home Page"></Label>
      
        </StackLayout>  
      
      </ContentPage.Content>
    
    </ContentPage>
  
  
  </MasterDetailPage.Detail>
  
</MasterDetailPage>